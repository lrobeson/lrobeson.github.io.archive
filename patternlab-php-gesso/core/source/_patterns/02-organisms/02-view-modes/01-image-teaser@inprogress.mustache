<article class="node node--article node--image-teaser" role="article">
  <div class="layout-slat">
    <div class="layout-slat__media">
      <a href="{{ url }}">{{> atoms-thumbnail-image }}</a>
    </div>
    <div class="layout-slat__content">
      <h2 class="node__title"><a href="{{ url }}">{{ title }}</a></h2>
      <div class="node__date">{{> atoms-medium-date }}</div>
      {{{ summary }}}
    </div>
  </div>
</article>
