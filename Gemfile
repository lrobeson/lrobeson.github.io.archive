# Bundler's config file
# Defines the required gem versions
# http://bundler.io/v1.3/gemfile.html
#
# Use ~> to to allow newer minor versions within the same major version.
# Remove ~> to require a specific version.

# Grab gems from the RubyGems server.
source 'https://rubygems.org'

# Gemfile requirements for theme:
gem 'breakpoint', '~>2.4'
gem 'singularitygs', '~>1.4.0'
gem 'singularity-extras', '~>0.0.3'
# sass-globbing 1.1.1 currently breaks with relative paths.
# temporarily specifying version 1.1.0 until fixed.
# https://github.com/chriseppstein/sass-globbing/pull/20
gem 'sass-globbing', '1.1.0'

# 3.3+ version of Sass and 1.0.0.alpha.16+ version of Compass each include support for source maps
gem 'sass', '~> 3.4'
gem 'compass', '~> 1.0.1'
